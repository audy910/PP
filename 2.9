import java.util.*;
import java.lang.Math;

public class  sphereStats{
    public static void main(String args[]) {
      int r;
      double sa, volume;
      Scanner keyboard = new Scanner(System.in);
      
      System.out.println("enter the radius: ");;
      r = keyboard.nextInt();
      
      volume = (4 * Math.PI * Math.pow(r, 3))/3 ;
      sa = Math.pow(r, 2) * Math.PI * 4;
      
      System.out.printf("The volume is: %.2f%n", volume); 
      System.out.printf("\nThe Surface Area is: %.2f%n", sa);
      

      System.out.println("\nAudrey");
    }
}
